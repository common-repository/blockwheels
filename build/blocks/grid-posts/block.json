{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "blockwheels/grid-posts",
  "title": "Grid Posts",
  "category": "blockwheels",
  "icon": "groups",
  "description": "Display and filter latest posts in grid style.",
  "keywords": [
    "Latest",
    "Posts",
    "Grid"
  ],
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ]
  },
  "textdomain": "blockwheels",

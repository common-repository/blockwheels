    "order": {
      "type": "string",
      "default": "desc"
    },
    "orderBy": {
      "type": "string",
      "default": "date"
    },
    "columns": {
      "type": "object",
      "default": {
        "desktop": 2,
        "tablet": 2,
        "mobile": 1
      }
    },
    "colBorderRadius": {
      "type": "string"
    },
    "colPadding": {
      "type": "object",
